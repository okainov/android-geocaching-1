<?xml version="1.0" encoding="utf-8"?>
<manifest
        xmlns:android="http://schemas.android.com/apk/res/android"
        package="su.geocaching.android.ui"
        android:versionName="1.3.0 dev"
        android:installLocation="preferExternal"
        android:versionCode="1080">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-feature android:name="android.hardware.location.gps" android:required="true"/>

    <uses-sdk android:minSdkVersion="4" android:targetSdkVersion="13"/>

    <application
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:name="su.geocaching.android.controller.GeocachingApplication"
            android:debuggable="true">

        <uses-library android:name="com.google.android.maps" android:required="true"/>

        <activity
                android:name="su.geocaching.android.ui.DashboardActivity"
                android:label="@string/app_name"
                android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
                android:name="su.geocaching.android.ui.compass.CompassActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar"
                android:screenOrientation="portrait">
        </activity>

        <activity
                android:name="su.geocaching.android.ui.searchmap.SearchMapActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar"/>

        <activity
                android:name="su.geocaching.android.ui.selectmap.SelectMapActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>

        <activity
                android:name="su.geocaching.android.ui.info.InfoActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar"
                android:configChanges="orientation|keyboardHidden">
        </activity>
        
        <activity
                android:name="su.geocaching.android.ui.info.AdvancedInfoActivity"
                android:theme="@style/Theme.Sherlock.Light"
                android:windowSoftInputMode="adjustResize">
        </activity>        

        <activity
                android:name="su.geocaching.android.ui.info.CacheNotesActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar"
                android:windowSoftInputMode="adjustResize">
        </activity>

        <activity
                android:name="su.geocaching.android.ui.FavoritesFolderActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>

        <!-- preferences -->
        <activity android:name=".preferences.DashboardPreferenceActivity"/>
        <activity android:name=".preferences.MapPreferenceActivity"/>
        <activity android:name=".preferences.CompassPreferenceActivity"/>
        <activity android:name=".preferences.EnergySavingPreferenceActivity"/>
        <activity android:name=".preferences.TrafficPreferenceActivity"/>

        <!-- checkpoints -->
        <activity
                android:name="su.geocaching.android.ui.checkpoints.CreateCheckpointActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar"
                android:windowSoftInputMode="adjustPan">
        </activity>

        <activity
                android:name=".checkpoints.CheckpointsFolderActivity"
                android:theme="@android:style/Theme.Light.NoTitleBar">
        </activity>

        <activity
                android:name="su.geocaching.android.ui.checkpoints.CheckpointDialog"
                android:theme="@android:style/Theme.Dialog">
        </activity>
    </application>
</manifest>