<?xml version="1.0" encoding="utf-8"?>
<manifest package="su.geocaching.android.ui"
	android:versionName="1.1.0" android:versionCode="938"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>

	<application android:icon="@drawable/ic_launcher"
		android:label="@string/app_name" android:debuggable="true"
		android:name="su.geocaching.android.controller.GeocachingApplication">

		<receiver android:name="su.geocaching.android.controller.ConnectionStateReceiver">
			<intent-filter>
				<action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
			</intent-filter>
		</receiver>

		<activity android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar" android:name=".DashboardActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar"
			android:screenOrientation="portrait" android:name=".compass.CompassActivity">
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name=".selectmap.SelectMapActivity"
			android:theme="@android:style/Theme.Light.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name="InfoActivity">
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>


		<activity android:name="su.geocaching.android.ui.AboutActivity"
			android:theme="@android:style/Theme.Dialog">
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>
		<activity android:name="su.geocaching.android.ui.CacheNotesActivity"
			android:theme="@android:style/Theme.Light.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
		</activity>

		<activity android:name="su.geocaching.android.ui.FavoritesFolderActivity"
			android:theme="@android:style/Theme.Light.NoTitleBar">
			<intent-filter>
				<action android:name="android.intent.action.RUN" />
				<category android:name="android.intent.category.DEFAULT" />
				<action android:name="android.intent.action.SEARCH" />
			</intent-filter>
			<meta-data android:name="android.app.searchable"
				android:resource="@xml/searchable" />
		</activity>

		<uses-library android:name="com.google.android.maps" />

		<activity android:name=".geocachemap.MapPreferenceActivity" />
		<activity android:name=".DashboardPreferenceActivity" />
		<activity android:name=".EnergySavingPreferenceActivity" />
		<activity android:name=".InternetAndGpsPreferenceActivity" />
		<activity android:name=".compass.CompassPreferenceActivity" />
		<activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name="su.geocaching.android.ui.checkpoints.CreateCheckpointActivity"/>
		<activity android:theme="@android:style/Theme.Light.NoTitleBar" android:name="su.geocaching.android.ui.checkpoints.CheckpointsFolder"/>
		<activity android:theme="@android:style/Theme.Dialog" android:name="su.geocaching.android.ui.checkpoints.CheckpointDialog"/>
		<activity android:label="@string/app_name"
			android:theme="@android:style/Theme.Light.NoTitleBar" android:name=".searchmap.SearchMapActivity" />

	</application>

	<uses-sdk android:minSdkVersion="4" />
</manifest>