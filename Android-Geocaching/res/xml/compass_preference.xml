<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/compass_category_title">
        <ListPreference
                android:key="@string/prefs_speed_key"
                android:title="@string/prefer_speed_title"
                android:entries="@array/speed_preference_entries"
                android:entryValues="@array/speed_preference_values"
                android:defaultValue="@string/prefer_speed_default_value"/>
        <ListPreference
                android:key="@string/prefs_appearance_key"
                android:title="@string/prefer_appearance_title"
                android:entries="@array/appearance_preference_entries"
                android:entryValues="@array/appearance_preference_values"
                android:defaultValue="@string/prefer_appearance_default_value"/>
        <ListPreference
                android:key="@string/prefs_sensor_key"
                android:title="@string/prefer_sensor_type_title"
                android:dialogTitle="@string/prefer_sensor_type_title"
                android:entries="@array/sensor_type_preference_entries"
                android:entryValues="@array/sensor_preference_values"
                android:defaultValue="@string/sensor_preference_default_value"/>

