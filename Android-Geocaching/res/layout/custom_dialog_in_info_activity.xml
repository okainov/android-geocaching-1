<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">
	<CheckBox android:text="@string/always_keep" android:id="@+id/downloadNoteBookAlways"
		android:layout_height="30dip" android:layout_width="wrap_content" />


	<LinearLayout android:id="@+id/LinearLayout01"
		android:orientation="horizontal" android:layout_height="wrap_content"
		android:layout_width="fill_parent">

		<Button android:layout_height="50dip" android:id="@+id/ButtonYes"
			android:text="@string/yes" android:layout_width="0dip"
			android:layout_weight="1" android:onClick="onYesClick"></Button>

		<Button android:layout_height="50dip" android:id="@+id/ButtonNo"
			android:text="@string/no" android:layout_width="0dip"
			android:layout_weight="1" android:onClick="onNoClick"></Button>
	</LinearLayout>
</LinearLayout>
 


