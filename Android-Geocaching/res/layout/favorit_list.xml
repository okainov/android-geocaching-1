<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  >
   
   	<LinearLayout style="@style/TitleBar" android:id="@+id/title_bar"
		android:background="@drawable/geologo_background">
		<ImageView android:src="@drawable/geologo" style="@style/TitleBarLogo"
			android:id="@+id/title_logo"></ImageView>
		<View style="@style/TitleBarSpring"></View>
		<ImageView style="@style/TitleBarSeparator"></ImageView>
	</LinearLayout>
  
  <TextView
  	android:gravity="center_horizontal"
  	android:layout_width="fill_parent"
  	android:layout_height="wrap_content"
  	android:text="@string/favorit_folder_title_text"
  	android:textStyle="bold"
  	android:id="@+id/favorit_foldet_title_text"
   />
  
  <ListView 
  	android:layout_height="wrap_content"
  	android:layout_width="fill_parent"
  	android:id="@+id/favorit_folder_listCach"
  />

</LinearLayout>
