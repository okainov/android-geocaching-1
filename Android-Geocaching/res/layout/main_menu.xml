<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <Button android:id="@+id/btSelectGeocache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:clickable="true"
        android:text="@string/select_geocache_button_text"/>
        
        <Button android:id="@+id/btSearchGeocache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:clickable="true"
        android:text="@string/search_geocache_button_text"/>
        
        <Button android:id="@+id/btInfoGeocache"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:clickable="true"
        android:text="@string/info_geocach_button_text"/>
        
        <Button android:id="@+id/btFavoritFolder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10px"
        android:clickable="true"
        android:text="@string/favorit_folder_userstory_text"/>
</LinearLayout>
