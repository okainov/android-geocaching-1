<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/dashboard_background">

    <!--Title bar -->
    <LinearLayout android:id="@+id/titleBar"
                  style="@style/TitleBar"
                  android:background="@drawable/geologo_background">
        <ImageView android:src="@drawable/geologo"
                   style="@style/TitleBarLogo"
                   android:onClick="onHomeClick"/>

        <!-- It view need for right align -->
        <View style="@style/TitleBarSpring"/>

        <View style="@style/TitleBarSeparator"/>

        <!-- Sort list -->
        <ImageView android:id="@+id/actionSearch"
                   style="@style/ActionBarIcon"
                   android:src="@drawable/ic_action_sort"
                   android:onClick="onSortClick"/>

        <View style="@style/TitleBarSeparator"/>

        <!-- Search -->
        <ImageView android:id="@+id/actionSearch"
                   style="@style/ActionBarIcon"
                   android:src="@drawable/ic_action_search"
                   android:onClick="onSearchClick"/>
    </LinearLayout>

    <TextView android:id="@+id/favorite_folder_title_text"
              android:gravity="center_horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="@string/favorite_list_In_DB_not_cache"
              android:textSize="@dimen/text_size_medium"
              android:textStyle="bold"
              android:textColor="@color/dashboard_text_color"
              android:layout_marginTop="10dip"
              android:layout_below="@id/titleBar"/>

    <ListView android:id="@android:id/list"
              android:layout_height="wrap_content"
              android:layout_width="fill_parent"
              android:layout_weight="1"
              android:background="@color/dashboard_background"
              android:cacheColorHint="@android:color/transparent"
              android:layout_below="@id/titleBar"
              android:layout_alignParentBottom="true"/>

    <!-- Sort List -->
    <LinearLayout android:id="@+id/layoutActionSortList"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_margin="2dp"
                  android:orientation="vertical"
                  android:background="@drawable/action_list_bg"
                  android:visibility="gone"
                  android:clickable="true"
                  android:layout_below="@id/titleBar"
                  android:layout_alignParentRight="true">
        <TextView android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:layout_margin="3dp"
                  android:text="@string/sort_by"
                  android:textSize="@dimen/text_size_medium"
                  android:textColor="@color/dashboard_text_color"
                  android:textStyle="bold"/>
        <Button android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="3dp"
                android:text="@string/by_name"
                android:onClick="sortByName"/>
        <Button android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_margin="3dp"
                android:text="@string/by_distance"
                android:onClick="sortByDistance"/>
    </LinearLayout>
</RelativeLayout>

