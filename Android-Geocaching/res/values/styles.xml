<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitleBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/title_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/geologo_background</item>
    </style>

    <style name="TitleBarSeparator">
        <item name="android:layout_width">3px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/action_bar_divider</item>
    </style>

    <style name="TitleBarLogo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TitleBarSpring">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="DashboardButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="FavoritesFolderRowTitle">
        <item name="android:textSize">@dimen/text_size_list_name</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/favorites_text_color_selector</item>
    </style>

    <style name="FavoritesFolderRowSubText">
        <item name="android:textSize">@dimen/text_size_list_status</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/favorites_text_color_selector</item>
    </style>

    <style name="FavoritesFolderRowDistanceText">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@drawable/favorites_text_color_selector</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ActionBarIcon">
        <item name="android:layout_width">@dimen/header_action_icon_size</item>
        <item name="android:layout_height">@dimen/header_action_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
    </style>

    <!-- Text styles -->

    <style name="DashboardButtonText" parent="android:TextAppearance">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dashboard_text_color</item>
    </style>
    
    <style name="Theme.Geocaching" parent="@style/Theme.Sherlock.Light">
    	<item name="abBackground">@color/dashboard_background</item>
    	<item name="abTitleTextStyle">@style/GeocachingActionBarTitleStyle</item>
    	<!--  <item name="abIcon">@drawable/geologo</item> -->    	
    	<item name="actionBarTabStyle">@style/GeocachingActionBarTabStyle</item>
  		<item name="actionBarTabTextStyle">@style/GeocachingActionBarTabTextStyle</item>    	 		    	 
    </style>
    
    <style name="GeocachingActionBarTitleStyle" parent="TextAppearance.Widget.Title">
        <item name="android:textColor">@color/dashboard_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>    
        
    <style name="GeocachingActionBarTabStyle" parent="Widget.Sherlock.Light.ActionBar.TabView">
        <item name="android:padding">4dip</item>
    </style>
    
    <style name="GeocachingActionBarTabTextStyle" parent="@style/Widget.Sherlock.ActionBar.TabText">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
